<div class="container-fluid">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <h1>Viking URL Shortener</h1>
    </div>
  </div>
</div>

<div class="jumbotron">
  <div class="container">
    <form class="form-inline" action="/submit" method="post">
      <h2>Shorten Your Links</h2>
      <div class="form-group row">
        <input type="text" class="form-control" name="url" placeholder="Your URL here...">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

<div class="container-fluid">
  <div class="row item">
    <div class="col-xs-offset-2 col-xs-8">
      <div class="col-xs-3">
        Original URL
      </div>
      <div class="col-xs-3">
        Created
      </div>
      <div class="col-xs-3">
        Short URL
      </div>
      <div class="col-xs-3">
        All Clicks
      </div>
    </div>
  </div>

  {{#each allUrls as |urlItem|}}
  <div class="row item">
    <div class="col-xs-offset-2 col-xs-8">
      <div class="col-xs-3">
        <a href="http://{{urlItem.original}}" target="_blank">
          {{urlItem.original}}
        </a>
      </div>
      <div class="col-xs-3">
        {{{date urlItem.date}}}
      </div>
      <div class="col-xs-3">
        <a class="shortUrl" href="{{urlItem.short}}" target="_blank">
          localhost:3000/{{urlItem.short}}
        </a>
      </div>
      <div class="col-xs-3" id="{{urlItem.short}}">
        {{urlItem.count}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script type="text/javascript">
  var socket = io.connect('http://localhost:3000');

  socket.on('increment', data => {
    var shortUrl = data[0];
    var count = data[1];
    $(`#${shortUrl}`).html(count);
  });

  $(".shortUrl").click( (event) => {
    var shortUrl = $(event.target).attr('href');
    console.log(shortUrl);
    socket.emit('increment', shortUrl);
  });
</script>
