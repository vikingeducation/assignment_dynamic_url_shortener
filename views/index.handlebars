<section class='top-section'>
  <h3>Simplifiy Your Links</h3>
  <form action='/create' method='post'>
    <input type='text' placeholder='Enter a full url to shorten' name='fullURL' />
    <button type='submit'>Shorten URL</button>
  </form>
</section>

<section class='table-container'>
  <table>
    <tr>
      <th>Original URL</th>
      <th>Short URL</th>
      <th>All Clicks</th>
    </tr>

    {{#each urls as |url|}}
    <tr>
      <td>{{url.longURL}}</td>
      <td><a href='/home/{{url.shortenedURL}}'>{{../baseURL}}/{{url.shortenedURL}}</a></td>
      <td id='{{url.shortenedURL}}'>{{url.visits}}</td>
    </tr>
    {{/each}}
  </table>
</section>
