<div class="container">
	<div class="jumbotron">
	  <h1>Simplify your links</h1>

<!--  -->
	  <form action="add" method="POST">
		  <div class="form-group">
		    <input name="url" type="text" class="form-control" id="url-name" placeholder="Your original URL here">
		  </div>
		  <button type="submit" class="btn btn-default">SHORTEN URL</button>
		</form>
	</div>

	<div class="panel panel-default">
	  <!-- Default panel contents -->
	  <div class="panel-heading">Panel heading</div>

	  <!-- Table -->
	  <table class="table">
	    <thead>
	    	<th>Original URL</th>
	    	<th>Created</th>
	    	<th>Short URL</th>
	    	<th>All Clicks</th>
	    </thead>
	    <tbody>
	    	{{#each data as |urldata|}}
	    		<tr>
	    			<td><a href="http://{{urldata.value}}" target="_blank"> {{urldata.value}}</a></td>
	    			<td>{{urldata.timestamp}}</td>
	    			<td><a class="link" href="{{urldata.key}}" target="_blank">localhost:3000/{{urldata.key}}</a></td>
	    			<td>{{urldata.counter}}</td>
	    		</tr>
	    	{{/each}}
	    </tbody>
	  </table>
	</div>
</div>
