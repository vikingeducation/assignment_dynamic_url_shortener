{{#each allUrls as |url|}}
  <h2>
    {{url.fullUrl}}
    <a href="/{{url.id}}">
      localhost:3000/{{url.id}}
    </a>

    {{url.viewCount}}</h2>
  </h2>

  <hr>
{{/each}}

