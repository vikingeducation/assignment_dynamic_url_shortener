<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
    <h1>The link Shortener 5000</h1>
    <p>Enter in a URL to get a magic short link</p>
    <form action="/" method="post">
      <div class="form-group">
        <input type="text" name="url" placeholder="Your original URL here" class="form-control" />
        <br>
        <div class="text-center"><button type="submit" class="btn btn-primary">Shorten URL</button></div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped table-inverse">
      <thead>
        <tr>
          <th>Original URL</th>
          <th>Created</th>
          <th>Short URL</th>
          <th>All clicks</th>
        </tr>
      </thead>
      <tbody>
        {{#each urlPairs as |pair| }}
          <tr>
            <td>{{this.url}}</td>
            <td>{{this.created}}</td>
            <td><a class="shortlink" href="{{this.short}}">{{../baseUrl}}/{{this.short}}</td>
            <td id="{{this.short}}">{{this.clicks}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>



