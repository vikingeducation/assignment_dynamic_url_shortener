<section id="head-form" class="clearfix">
  <h1>URL Shortener</h1>
  <div class="col-sm-12" id="form-container">
    <form action="/" method="POST" id="shorten-link-form">
      <div class="form-group col-sm-6">
        <input type="text" name="url" class="form-control" id="link-input" placeholder="You original URL here">
      </div>
      <div class="col-sm-3">
        <button type="submit" class="btn btn-default pull-left" id="shorten-button">Shorten URL</button>
      </div>
    </form>
  </div>
</section>
{{> flash}}
<section id="url-table" class="col-sm-10 col-sm-offset-1">
  {{> link_table}}
</section>
