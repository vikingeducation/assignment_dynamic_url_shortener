<h1>{{title}}</h1>

<div class="row">
  <div class="col-xs-8 inputBox">
    <h3>Simplify your links</h3>
    <form class="" action="/" method="post">
      <div class="form-group">

    <input type="text" class="form-control" id="idURL" placeholder="Your Original URL here" name="originalURL">
  </div>

    <button type="submit" class="btn btn-default btn-format">Shorten URL</button>
  </form>
</div>

<div class="row">
  <div class="col-xs-8">
    <table class="table table-hover" id="link-table">
      <tr>
        <th>Original URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
      {{#each urls}}
        <tr class="{{this.shortURL}}">
          <td><a href="{{this.longURL}}">{{this.longURL}}</a></td>
          <td><a href="{{../server}}/{{this.shortURL}}">{{../server}}/{{this.shortURL}}</a></td>
          <td id="{{this.shortURL}}-count">{{this.count}}</td>
        </tr>
      {{/each}}
    </table>

  </div>

</div>

</div>
